# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database - Replace with your Oracle Cloud Database URL
DATABASE_URL="postgresql://username:password@your-oracle-db-host:5432/linkmanager"

# JWT Configuration - Generate strong secret key
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters-long"
JWT_EXPIRES_IN="7d"

# Cookie Session Keys - Generate strong random keys
COOKIE_KEY_1="your-production-cookie-key-1-minimum-32-characters"
COOKIE_KEY_2="your-production-cookie-key-2-minimum-32-characters"

# Base URLs - Replace with your Oracle Cloud instance
BASE_URL="https://your-oracle-instance-ip-or-domain.com"
FRONTEND_URL="https://your-frontend-domain.com"

# OAuth Configuration - Add your production OAuth apps
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_CALLBACK_URL="https://your-oracle-instance-ip-or-domain.com/api/auth/github/callback"

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-oracle-instance-ip-or-domain.com/api/auth/google/callback"

# Email Configuration for Password Reset
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-production-email@gmail.com"
EMAIL_PASS="your-gmail-app-password"
EMAIL_FROM="noreply@your-domain.com"

# IP Info Token (optional for analytics)
IP_INFO_TOKEN="your-ipinfo-token"

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUND=12
